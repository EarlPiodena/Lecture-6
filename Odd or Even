#include <iostream>
using namespace std;

int main()
{
    int number;
    int remainder;

        cout << "Enter the number: ";
        cin >> number;

        remainder = number % 2;

        if (remainder == 0)
            cout << number << " is an even number " << endl;
        else
            cout << number << " is an odd number " << endl;

        return 0;
}
